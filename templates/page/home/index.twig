{% extends '_layout' %}

{% block body %}
<!-- Nav Bar -->
<div
    class="nav z-50 py-4 md:py-12 lg:py-20 w-full h-16 md:w-12 px-6 lg:w-32 lg:pr-16 md:h-screen fixed top-0 right-0 border-b md:border-b-0 md:border-l-0 border-white hover:border-white cursor-pointer flex md:flex-col justify-between">
    <div class="flex flex-col items-center justify-center order-2 md:order-1">
        <p class="menuTextChange hidden md:block uppercase mb-12 text-burgundy text-xs md:text-base">
            Menu
        </p>
        <div id="menu" class="flex flex-col justify-between h-4 md:h-6 transition-transform duration-500 md:mb-4">
            <div class="menuLines w-5 md:w-8 bg-burgundy h-px"></div>
            <div class="menuLines w-5 md:w-8 bg-burgundy h-px"></div>
            <div class="menuLines w-5 md:w-8 bg-burgundy h-px"></div>
        </div>
        </p>
    </div>
</div>

<!-- featured block -->
<main id="top" class="overflow-hidden">
{% for i, block in entry.featureBlock.all() %}
<section class="w-full flex flex-col sm:flex-row-reverse md:pr-32 lg:pr-32">
  <img class="w-full sm:w-1/3 md:w-1/2 lg:w-7/12 object-cover px-6 sm:px-0 flex-shrink-0  border-burgundy" src="{{ block.image.one().url() }}" alt="">
  <div class="flex justify-center flex-col px-6 sm:px-12 md:px-24 py-12 text-burgundy border-burgundy">
  <div class="mx-24">
    <div class="text-base">
    {{ block.heading }}
   </div>
    <div class="leading-tight text-2xl md:text-5xl mt-12 font-hairline">
      {{ block.excerpt }}
    </div>
    </div>
  </div>
</section>
 {% endfor %}
</main>
{% for i, block in entry.blockBuilder.all() %}
<section class="w-full flex flex-col sm:flex-row-reverse md:pr-32 lg:pr-32">
  <img class="w-full sm:w-1/3 md:w-1/2 lg:w-7/12 object-cover px-6 sm:px-0 flex-shrink-0 border-t-2 border-burgundy" src="{{ block.image.one().url() }}" alt="">
  <div class="flex justify-center flex-col px-6 sm:px-12 md:px-24 py-12 text-burgundy border-t-2 border-burgundy">
  <div class="mx-24">
    <div class="text-base">
    {{ block.heading }}
   </div>
    <div class="leading-tight text-2xl md:text-5xl mt-12 font-hairline">
      {{ block.excerpt }}
    </div>
    <div class="text-base tracking-widest mt-20 leading-relaxed mt-6">
      <p>{{ block.description }}<br></p>
    </div>
    </div>
  </div>
</section>
 {% endfor %}

 <!-- Our Values -->
 <section class="w-full flex flex-col sm:flex-row-reverse md:pr-32 lg:pr-32 border-t-2 border-burgundy py-12 md:py-24">
  <div class="w-full sm:w-1/3 md:w-1/2 lg:w-7/12 object-cover pr-6 py-8 px-0 md:px-32 flex-shrink-0">
       <div>
                        {% for i, block in entry.ourValues.all() %}
                        <p class="mt-12">{{ block.heading }}</p>
                        <p class="mt-16  text-5xl"> {{ block.excerpt }}</p>
                        {% endfor %}
                        <div class="grid grid-cols-3 gap-6 mt-24">
                            <ol class="space-y-3">
                                <li>Family</li>
                                <li class="border-t border-burgundy py-2">Health</li>
                                <li class="border-t border-burgundy py-2">Trust</li>
                                <li class="border-t border-burgundy py-2">Respect</li>
                            </ol>
                            <ol start="5" class="space-y-3">
                                <li>Integrity</li>
                                <li class="border-t border-burgundy py-2">Humility</li>
                                <li class="border-t border-burgundy py-2">Teamwork</li>
                                <li class="border-t border-burgundy py-2">Compassion</li>

                            </ol>
                            <ol start="9" class="space-y-3">
                                <li>Excellence</li>
                                <li class="border-t border-burgundy py-2">Innovation</li>
                                <li class="border-t border-burgundy py-2">Value Name</li>
                                <li class="border-t border-burgundy py-2">Value Name</li>
                            </ol>
                        </div>
         </div>
  </div>
  <div class="flex justify-center flex-col px-6 sm:px-12 md:px-32 py-12">
    {% for i, block in entry.ourValues.all() %}
        <img class="w-full" src="{{ block.image.one().url() }}" alt="">
   {% endfor %}
  </div>
</section>
<div class="bg-coral h-screen w-full ">
            <div class="max-w-screen-2xl mx-auto grid grid-cols-2 pl-16 pr-32">
                <div class="text-left relative">
                    <p class="mt-36"> Start your next chapter </p>
                    <p class="mt-16 leading-tight text-5xl w-3/4 tracking-wide"> If this is the right time for you, join our
                        team. </p>
                </div>
                <div class="pr-8">
                    <p class="mt-36">Career Enquiry</p>
                    <div class="grid grid-cols-2 gap-6 mt-12">
                        <div class="">
                            <label class="block">
                                <span class="text-gray-700">Full name</span>
                                <input type="text"
                                    class="mt-2 block w-full rounded-3xl bg-transparent border-white  focus:ring-0 placeholder-white"
                                    placeholder="Enter Full Name">
                            </label>
                            <label class="block mt-8">
                                <span class="text-gray-700">Contact number</span>
                                <input type="tel"
                                    class="mt-2 block w-full rounded-3xl bg-transparent border-white  focus:ring-0 placeholder-white"
                                    placeholder="Enter Full Name">
                            </label>
                            <label class="block mt-8">
                                <span class="text-gray-700">Attach CV</span>
                                <input type="text"
                                    class="mt-2 block w-full rounded-3xl bg-transparent border-white  focus:ring-0 placeholder-white"
                                    placeholder="Attach File">
                            </label>

                        </div>
                        <div>
                            <label class="block">
                                <span class="text-gray-700">Email Address</span>
                                <input type="text"
                                    class="mt-2 block w-full rounded-3xl bg-transparent border-white  focus:ring-0 placeholder-white"
                                    placeholder="Enter Full Name">
                            </label>
                            <label class="block mt-8">
                                <span class="text-gray-700">Salary Expectation</span>
                                <select class="block w-full mt-2 rounded-3xl bg-transparent text-white border-white ">
                                    <option disabled selected hidden> Please select</option>
                                    <option>Wedding</option>
                                    <option>Birthday</option>
                                    <option>Other</option>
                                </select>
                            </label>
                            <button class="mt-16 bg-white block w-full rounded-3xl py-2 text-center">
                                Submit
                            </button>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% include '_includes/footer' %}
{% endblock %}